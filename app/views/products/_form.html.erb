<%= form_for(@product) do |f| %>

  <div class = "field">
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
  </div>

  <br>

  <div class = "field">
    <%= f.label :description %><br />
    <%= f.text_area :description %><br />
  </div>

  <br>

  <div class = "field">
    <%= f.label :price_in_cents %><br />
    <%= f.number_field :price_in_cents %><br />
  </div>

  <br>


  <div class ="actions">
    <%= f.submit 'Create New Product!' %>
  </div>

<% end %>
